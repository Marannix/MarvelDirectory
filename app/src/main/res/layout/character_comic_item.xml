<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

    <ImageView
            android:id="@+id/comicPoster"
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:scaleType="fitXY"
            android:elevation="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/hourglass"
            android:layout_width="80dp"
            android:layout_height="120dp"
            app:lottie_fileName="hourglass_loading.json"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"/>

    <TextView
            android:id="@+id/comicTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-black"
            android:textColor="?android:textColorPrimary"
            android:textSize="13sp"
            android:maxLines="2"
            app:layout_constraintStart_toEndOf="@id/comicPoster"
            app:layout_constraintTop_toTopOf="@id/comicPoster"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/comicPoster"/>

</androidx.constraintlayout.widget.ConstraintLayout>